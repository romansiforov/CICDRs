pipeline {
    agent any 

    tools {nodejs "NodeJS"}

    stages {
        stage('Install dependencies') { 
            steps {
                sh 'npm ci' 
            }
        }
        stage('Cypress run') { 
            steps {
                catchError(buildResult: "SUCCESS", stageResult: 'SUCCESS'){
                sh 'allure:clearData'
                sh 'cy:testWithAllureReport' 
                }

            }
        }
        stage('Generate report') { 
            steps {
                sh 'allure:generateReport' 
                allure(
                    results: [['allure-results']]
                )
            }
        }
    }
}